{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Shuju: mvn build",
            "type": "shell",
            "command": "mvn clean package",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[([A-Z]+)\\] (.+):\\[([0-9]+),([0-9]+)\\] (.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 1,
                    "message": 5
                }
            }
        },
        {
            "label": "Shuju: mvn install",
            "type": "shell",
            "command": "mvn install",
            "problemMatcher": {
                "owner": "java",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[([A-Z]+)\\] (.+):\\[([0-9]+),([0-9]+)\\] (.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 1,
                    "message": 5
                }
            }
        },
        {
            "label": "Shuju: mvn deploy",
            "type": "shell",
            "command": "mvn deploy",
            "problemMatcher": {
                "owner": "java",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[([A-Z]+)\\] (.+):\\[([0-9]+),([0-9]+)\\] (.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 1,
                    "message": 5
                }
            }
        }
    ]
}
